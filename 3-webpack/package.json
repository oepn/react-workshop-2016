{
  "name": "intro-to-react-webpack",
  "private": true,
  "scripts": {
    "postinstall": "npm run build",
    "start": "npm run watch & npm run browser-sync",
    "test": "mocha --compilers js:babel-register",
    "build": "rimraf build && webpack --config webpack.config.production.js",
    "watch": "rimraf build && webpack --watch",
    "browser-sync": "browser-sync start --server --files \"index.html, build/**/*.js\" --no-notify --no-open"
  },
  "dependencies": {
    "babel-polyfill": "^6.7.4",
    "babel-runtime": "^6.6.1",
    "react": "^0.14.8",
    "react-dom": "^0.14.8"
  },
  "devDependencies": {
    "babel-core": "^6.7.4",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.7.2",
    "browser-sync": "^2.11.2",
    "chai": "^3.5.0",
    "enzyme": "^2.2.0",
    "mocha": "^2.4.5",
    "react-addons-test-utils": "^0.14.8",
    "rimraf": "^2.5.2",
    "webpack": "^1.12.14"
  }
}
